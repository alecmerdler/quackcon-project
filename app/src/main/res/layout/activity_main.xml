<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#10000000"
    tools:context="com.quackcon.project.engage.EngageActivity">

    <GridView
        android:id="@+id/events_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

    <Switch
        android:id="@+id/toggle_vibrate_pebble"
        android:text="@string/toggle.vibrate.pebble"
        android:gravity="right"
        android:textStyle="bold"
        android:checked="false"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/events_gridview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Switch
        android:id="@+id/toggle_vibrate_phone"
        android:text="@string/toggle.vibrate.phone"
        android:gravity="right"
        android:textStyle="bold"
        android:checked="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/toggle_vibrate_pebble"
        android:layout_marginTop="19dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
